{
  "name": "pickle-user",
  "version": "0.0.1",
  "description": "pickle user authentication system",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodgroup/pickle-user"
  },
  "author": "NOD Digital",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/server.ts",
    "watch": "ts-node-dev --respawn --transpileOnly src/server.ts",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "yarn test -- --watchAll",
    "pretty-quick": "pretty-quick",
    "prettier": "prettier --write \"**/*\" --ignore-path .gitignore",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.13",
    "apollo-server-testing": "^2.5.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.39",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "apollo-server": "^2.5.0",
    "graphql": "^14.3.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.1.0",
    "typeorm": "^0.2.17"
  }
}

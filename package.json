{
  "name": "pickle-user",
  "version": "0.0.1",
  "description": "pickle user authentication system",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodgroup/pickle-user"
  },
  "author": "NOD Digital",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "serve": "node dist/server.js",
    "build": "yarn build-ts && yarn tslint",
    "build-ts": "rm -rf dist && tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "yarn build-ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "yarn test -- --watchAll"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.13",
    "apollo-server-testing": "^2.5.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "apollo-server": "^2.5.0",
    "graphql": "^14.3.0"
  }
}
